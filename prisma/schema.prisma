  Order     Int
  Show      Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model participant{
  id        String   @id @map("_id") @db.ObjectId @default(auto())
  userId    String   @db.ObjectId
  Name      String
  Designation String
  Institute String
  ProfileLink String
  ImgLink   String
  Order     Int
  Show      Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}





